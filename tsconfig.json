{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noUnusedLocals": false, 
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/screens/home/MainScreen/MainScreen.jsx",
    "src/stories/SectionCategory.stories.tsx"
, "sanity/services/courses.servies", "sanity/services/co-workers.servies", "src/pages/[locale]/404/index.jsx", "src/components/ui/Slider/index.js", "src/components/ui/Map/index.js", "src/utils/ArrayMaxItems.js"  ],
  "exclude": [
    "node_modules"
  ]
}